generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// npx prisma migrate dev --name init

enum ProjectType {
  PERSONAL
  COMMERCIAL
}

enum Direction {
  FRONTEND
  BACKEND
  DEVOPS
  OTHER
}

model Project {
  id           String       @id @default(uuid())
  name         String
  description  String
  tag          ProjectType  @default(PERSONAL)
  links        String[]
  technologies Technology[]
  libraries    Libraries[]
  start        String
  end          String?
  views        Int          @default(0)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([name], name: "project_name_idx")
  @@map("projects")
}

model Technology {
  id          String      @id @default(uuid())
  name        String      @unique
  description String?
  versions    String?     @default("latest")
  direction   Direction   @default(FRONTEND)
  projects    Project[]
  libraries   Libraries[]
  isShowed    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([name], name: "technologies_name_idx")
  @@map("technologies")
}

model Libraries {
  id           String     @id @default(uuid())
  name         String
  description  String?
  versions     String?    @default("latest")
  technologyId String
  isShowed     Boolean    @default(true)
  technology   Technology @relation(fields: [technologyId], references: [id])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  Project      Project?   @relation(fields: [projectId], references: [id])
  projectId    String?

  @@index([name], name: "libraries_name_idx")
  @@map("libraries")
}

model Submission {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
