generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// npx prisma migrate dev --name init

enum ProjectType {
  PERSONAL
  COMMERCIAL
}

enum Direction {
  FRONTEND
  BACKEND
  DEVOPS
}

model Project {
  id           String       @id @default(uuid())
  name         String
  description  String
  tag          ProjectType  @default(PERSONAL)
  links        String[]
  technologies Technology[]
  start        DateTime
  end          DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  Module       Libraries[]

  @@index([name], name: "project_name_idx")
  @@map("projects")
}

model Technology {
  id          String      @id @default(uuid())
  name        String      @unique
  description String?
  versions    String?
  direction   Direction   @default(FRONTEND)
  projects    Project[]
  modules     Libraries[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([name], name: "technologies_name_idx")
  @@map("technologies")
}

model Libraries {
  id           String     @id @default(uuid())
  name         String
  technologyId String
  technology   Technology @relation(fields: [technologyId], references: [id])
  project      Project?   @relation(fields: [projectId], references: [id])
  projectId    String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([name], name: "libraries_name_idx")
  @@map("libraries")
}
